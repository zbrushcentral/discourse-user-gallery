<section class="ending-soon">
  <div class="countdown">
    <div class="container-day">
      <h3 class="day">{{this.day}}</h3>
      <h3>Day</h3>
    </div>
    <div class="container-hour">
      <h3 class="hour">
        {{this.hour}}
      </h3>
      <h3>Hour</h3>
    </div>
    <div class="container-minute">
      <h3 class="minute">
        {{this.minute}}
      </h3>
      <h3>Minute</h3>
    </div>
    <div class="container-second">
      <h3 class="second">
        {{this.second}}
      </h3>
      <h3>Second</h3>
    </div>
  </div>
</section>