{{#load-more
  selector=".user-gallery-container .item"
  action=(action "loadMore")
}}

  <div class="user-gallery-container">
    {{#each model.userGallery.items as |item index|}}
      <UserGalleryItem
        @challenges={{model.challenges}}
        @item={{item}}
        @index={{index}}
        @activity={{model.activity}}
        @user={{model.userGallery.user}}
      />
    {{/each}}
  </div>
{{/load-more}}

{{#if isEmpty}}
  <div class="alert alert-info report-alert">{{i18n
      "discourse_user_gallery.empty"
    }}</div>
{{/if}}

{{conditional-loading-spinner condition=model.loading}}