{{#d-modal-body class="challenge-details-submission-modal"}}
  <div class="container-full">
    <div class="container-left">
      <div class="container-image">
        <div class="container-top-like">
          <span class="like-value">{{model.topic.like_count}}</span>
          {{#if model.topic.liked.acted}}
            <span {{action "toggleLike"}} class="liked-heart">{{d-icon
                "heart"
              }}</span>
          {{else}}
            <span {{action "toggleLike"}} class="unliked-heart">{{d-icon
                "far-heart"
              }}</span>
          {{/if}}
        </div>
        <div class="lightbox-wrapper"><a
            class="lightbox"
            href={{model.src}}
            data-download-href={{model.src}}
            title="Ocean"
          ><img
              src={{model.src}}
              alt="Ocean"
              data-base62-sha1="sFhTxX5rnYbKv0QbCiVLUAoYvDK"
              width="1200"
              height="1500"
              srcset="{{model.src}} , {{model.src}}  1.5x, {{model.src}}  2x"
              data-small-upload={{model.src}}
            /><div class="meta">
              <svg
                class="fa d-icon d-icon-far-image svg-icon"
                aria-hidden="true"
              ><use href="#far-image"></use></svg><span class="filename">
                {{model.topic.title}}</span><span class="informations">1600Ã—2000
                865 KB</span><svg
                class="fa d-icon d-icon-discourse-expand svg-icon"
                aria-hidden="true"
              ><use href="#discourse-expand"></use></svg>
            </div></a></div>

      </div>
    </div>
    <div class="container-meta">
      <div class="container-username">
        <span class="avatar"></span>
        <p class="username">{{model.username}}</p>
      </div>
      <span class="views-value">{{model.topic.views}}</span>
      <span class="views-icon">{{d-icon "far-eye"}}</span>
      <span class="comments-icon">{{d-icon "far-comment"}}</span>
      <span class="comments-value">{{model.topic.posts_count}}</span>
      <div class="container-bottom-like">
        <span class="like-value">{{model.topic.like_count}}</span>
        {{#if model.topic.liked.acted}}
          <span {{action "toggleLike"}} class="liked-heart">{{d-icon
              "heart"
            }}</span>
        {{else}}
          <span {{action "toggleLike"}} class="unliked-heart">{{d-icon
              "far-heart"
            }}</span>
        {{/if}}
      </div>
    </div>
    <div class="container-right">
      <span class="topic-title">
        {{model.topic.title}}
      </span>
      <SubmissionComments @topic={{model.topicId}} />
    </div>
  </div>

{{/d-modal-body}}